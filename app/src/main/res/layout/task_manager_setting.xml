<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:maybe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#39B3A9"
            android:gravity="center"
            android:text="进程设置"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/add_blacknum"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/add_icon" />
    </RelativeLayout>

    <com.maybe.android.mobilesafe.view.SwitchView
        android:id="@+id/show_sys_task"
        android:layout_marginTop="-20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        maybe:switch_off="系统进程显示已经关闭"
        maybe:switch_on="系统进程显示已经开启"
        maybe:title="系统进程显示设置">
    </com.maybe.android.mobilesafe.view.SwitchView>
    <com.maybe.android.mobilesafe.view.SwitchView
        android:id="@+id/kill_process_bg"
        android:layout_marginTop="-35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        maybe:switch_off="当前状态：锁屏不清理"
        maybe:switch_on="当前状态：锁屏清理"
        maybe:title="锁屏清理进程设置">
    </com.maybe.android.mobilesafe.view.SwitchView>

</LinearLayout>